

<div class="container" style="border:1px solid #cecece;">
  <div class="clearfix">
    <%= image_tag("book.png",class:"float-left", :alt => "book icon") %>
      <h1 id ="recruit"> Recruit - Educators</h1>
</div>



<!-- Nav tabs -->
<ul class="nav nav-tabs" id="myTab" role="tablist" >
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Login</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Candidate</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="messages-tab" data-toggle="tab" href="#messages" role="tab" aria-controls="messages" aria-selected="false">Skills</a>
  </li>
</ul>

<!-- Tab panes -->
<div class="tab-content" >
  <div class="tab-pane active text-center" id="home" role="tabpanel" aria-labelledby="home-tab">
    
    <% if current_user %>
      Logged in as <%= current_user.email %>
      <%= link_to "Log Out", logout_path %>
      <% else %>
      <%= render "sessions/new" %>
  <%= link_to "Sign Up", signup_path %>
<% end %>
<p id="notice"><%= notice %></p>
    
  </div>

  <div class="tab-pane" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <%= render "candidateTab" %>
  </div>
  
  <div class="tab-pane" id="messages" role="tabpanel" aria-labelledby="messages-tab">
    <%= render "skillsTab" %>  
  </div>
</div>
</div>